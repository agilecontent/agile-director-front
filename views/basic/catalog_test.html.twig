{% extends "basic/layout2.html.twig" %}
{% block title %}{% endblock %}
{% block description %}{% endblock %}
{% block content %}
  <div class="main-content assets-content">
    <div class="assets packery-wrapper">
      <div class="packery-sizer"></div>
      <div class="packery-container">
        {% for item in items %}
          <div class="packery-object">
            <article class="{{ item.type }}">
              <img src="{% if item.image %}{{ item.image }}{% else %}{{ image }} {% endif %}"
                   alt="{{ item.name }}">
              <aside>
                <div class="coverall"/>
                <div class="content">
                  <ul class="icon-ul meta-data">
                    <li class="author"><i class="icon-li icon icon-user"></i>{{ item.author }}</li>
                    <li class="views"><i class="icon-li icon icon-eye"></i>{{ item.views }}</li>
                  </ul>
                </div>
                <div class="date">
                  <div class="clock">
                    <i class="icon icon-clock-o"></i>&nbsp;0
                  </div>
                  <div class="date-wrap">
                    <span class="day">{{ item.pubDate }}</span>
                    <span class="month">{{ item.pubDate }}</span>
                  </div>
                </div>
              </aside>
              <header>
                <h1>{{ item.name | truncate(100, true) }}</h1>
              </header>
              <div class="layer">
                <div>
                  <a href>
                    <i class="icon icon-minus-circled"></i>
                  </a>
                </div>
              </div>
            </article>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
