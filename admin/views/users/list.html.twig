{% extends "layout.html.twig" %}

{% block content %}
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Users</h3>
            </div>
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tbody>
                <tr>
                  {#<th>Id</th>#}
                  <th>Picture</th>
                  <th>Username</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Enabled</th>
                  <th>Is admin</th>
                  <th>Store</th>
                  <th>FB</th>
                  <th>Github</th>
                  <th>Linkedin</th>
                  <th>Updated At</th>
                  <th>Created At</th>
                  {#<th>Edit</th>
                  <th>Delete</th>#}
                </tr>
                  <tr>
                    {#<td></td>#}
                    <td></td>
                    <td>{{ memory_user.username }}</td>
                    <td></td>
                    <td></td>
                    <td style="color: green;">{{ memory_user.enabled }}</td>
                    <td style="color: green;">True</td>
                    <td>Memory</td>
                    <td></td>
                    <td></td>
                  </tr>


                    {% for row in rows %}
                    <tr>
                      {#<td>{{ row.id }}</td>#}
                      <td>
                        {% if row.picture %}
                        <img style="width:50px;" src="{{ row.picture }}" />
                        {% endif %}
                      </td>
                      <td>{{ row.username }}</td>
                      <td>{{ row.name }}</td>
                      <td>{{ row.email }}</td>
                      {% if row.enabled == false %}
                        <td style="color: red;">False</td>
                      {% else %}
                        <td style="color: green;">True</td>
                      {% endif %}
                      {% if row.is_admin == false %}
                        <td style="color: red;">False</td>
                      {% else %}
                        <td style="color: green;">True</td>
                      {% endif %}
                      <td>MongoDB</td>
                      <td style="color: green;">
                        {% if row.facebook %}
                        True
                        {% endif %}
                      </td>
                      <td style="color: green;">
                        {% if row.github %}
                        True
                        {% endif %}
                      </td>
                      <td style="color: green;">
                        {% if row.linkedin %}
                        True
                        {% endif %}
                      </td>
                      <td>{{ row.updated_at | date }}</td>
                      <td>{{ row.created_at | date }}</td>

                      {#<td><a href="/admin/items/rawedit/{{ row.id }}">Edit</a></td>
                      <td><a onclick="return confirm('Are you sure?')" href="/admin/items/delete/{{ row.id }}">Delete</a></td>#}

                  </tr>

                {% endfor %}
              </tbody>

            </table>
            </div>
            <!-- /.box-body -->

            <div class="box-footer clearfix">
            </div>


          </div>
          <!-- /.box -->
        </div>
      </div>

    </section>
{% endblock %}
